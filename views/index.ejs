<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <link href="http://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">
    <link href='/node_modules/fullcalendar/main.css' rel='stylesheet' />
    <script src='/node_modules/fullcalendar/main.js'></script>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
        <!-- Font Awesome icons-->
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/resources/CSS/home.css">


               
</head>
<body>

  
    
    <!--Si estamos logeados-->
    <% if (login) { %>
        <!--NavBar-->
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a href="/"><img class="navbar-brand" src="/assets/img/calendar.svg"></a>
            
          
                <a href="logout" class="btn btn-primary" type="submit">Cerrar Sesión</a>
            </div>
        </nav>
        



        <div class="container">
            <div id='calendar'></div>
        </div>

        <div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdrop" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-dark">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
                  <form id ="formulario" action="/create" method="post">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="name" name="name" required>
                          <label for="name" class="form-label pb-2">Evento</label>
                        </div>

                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="description" name="description" required>
                          <label for="description" class="form-label pb-2">Descripción</label>
                        </div>
    
    
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="date" name="date">
                            <label for="date" class="form-label pb-2">Fecha</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                          <input type="color" class="form-control" id="color" name="color">
                          <label for="color" class="form-label pb-2">Color</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                      <button class="btn btn-primary" type="submit">Registrar</button>
                    </div>
                  </form>
               
            </div>
          </div>
        </div> 
        <div class="modal fade" id="modalEdit" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdrop" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-dark">
                <h5 class="modal-title" id="titulo1"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
                  <form id ="formulario" action="/edit" method="POST">
                    <div class="modal-body">
                      <input type="hidden" class="form-control" id="id" name="id">
  
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="name1" name="name1" required>
                          <label for="name" class="form-label pb-2">Evento</label>
                        </div>
  
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="description1" name="description1" required>
                          <label for="description" class="form-label pb-2">Descripción</label>
                        </div>
    
    
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="date1" name="date1" required>
                            <label for="date" class="form-label pb-2">Fecha</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                          <input type="color" class="form-control" id="color1" name="color1">
                          <label for="color" class="form-label pb-2">Color</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>

                      <a href="/delete" class="btn btn-danger" type="submit" id="btnEliminar">Eliminar</a>
                      <button class="btn btn-primary" type="submit">Editar</button>
                    </div>
                  </form>
               
            </div>
          </div>
        </div> 


    <% } %>






    <!--Si no estamos logeados-->
    <% if (!login) { %>
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a href="/"><img class="navbar-brand" src="/assets/img/calendar.svg"></a>
                <a href="login" class="btn btn-primary" type="submit">Iniciar Sesión</a>
            </div>
        </nav>

    <main>
        <div class="container col-xxl-8 px-4 py-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
              <div class="col-12 col-md-8 col-lg-6">
                <img src="https://images.unsplash.com/photo-1616530834117-9167fb0d8ebc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1331&q=80" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
              </div>
              <div class="col-lg-6 ">
                <h1 class="display-5 fw-bold lh-1 mb-4"><i class="fa-regular fa-calendar me-2"></i>Calendar</h1>
                <p class="lead mb-4">Invierta menos tiempo en la planificación y sea más productivo con Calendar. Agende sus eventos y citas aquí.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                  <a  href="register" type="button" class="btn btn-primary btn-lg px-4 me-md-2">Regístrate</a>
                </div>
              </div>
            </div>
          </div>
    </main>

    <% } %>



    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <% if (typeof alert != "undefined") { %>
      <script>
          Swal.fire({
             icon: '<%=alertIcon %>',
             title: '<%= alertTitle %>',
             text: '<%= alertMessage%>',
             ShowConfirmButton: <%= showConfirmButton %>,
             timer: <%= timer %>
         }).then(()=>{
             window.location ='/<%= ruta %>'
         })
      </script>
 <% } %>




    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
    <script src="/js/es.js"></script>
    <% if (typeof result != "undefined") { %>
      <script>
        let result = JSON.parse('<%- JSON.stringify(result) %>');
        console.table(result);
            
            let myModal = new bootstrap.Modal(document.getElementById('myModal'));
            let modalEdit = new bootstrap.Modal(document.getElementById('modalEdit'));
            document.addEventListener('DOMContentLoaded', function() {
              let calendarEl = document.getElementById('calendar');
              let calendar = new FullCalendar.Calendar(calendarEl, {
                  initialView: 'dayGridMonth',
                  locale: 'es',
/*                   headerToolbar:{
                      left: 'prev, next, today',
                      center: 'title',
                      right: 'dayGridMonth, timeGridWeek, listWeek',
                  }, */
                  dateClick: function(info){ 
                      document.getElementById('date').value = info.dateStr;
                      document.getElementById('titulo').textContent = 'Registrar Evento';
                      myModal.show();
                  },
                  events: result,
                  eventClick: function(info){
                    console.log(info);
                    document.getElementById('id').value = info.event._def.extendedProps.id_evento;
                    document.getElementById('titulo1').textContent = 'Editar Evento';
                    document.getElementById('name1').value = info.event.title;
                    document.getElementById('description1').value = info.event._def.extendedProps.description;
                    document.getElementById('color1').value = info.event.backgroundColor;
                    
                    modalEdit.show();
                  }
              }); 
              calendar.render();
            });


          </script>
  
  
   <% } %>




</body>
</html>